# Test Environment Configuration
# Uses same ports as dev environment (services already running)

# Testing mode
TESTING=true

# Redis Configuration (Dev ports)
REDIS_URL=redis://localhost:6379/1
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1  # Use DB 1 for tests to isolate from dev data

# Qdrant Configuration (Dev ports)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_URL=http://localhost:6333

# MinIO Configuration (Dev ports)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_SECURE=false
MINIO_TEST_BUCKET=test-artifacts

# MLflow Configuration (Dev ports)
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_S3_ENDPOINT_URL=http://localhost:9000
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123

# PostgreSQL Configuration (Dev instance)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=ai_studio
POSTGRES_PASSWORD=dev_password_change_in_production
POSTGRES_DB=ai_studio_test  # Separate test database

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Test-specific settings
TEST_TIMEOUT=30
TEST_RETRY_ATTEMPTS=3
TEST_CLEANUP_ENABLED=true

# Logging
LOG_LEVEL=DEBUG
ENABLE_TEST_LOGGING=true
