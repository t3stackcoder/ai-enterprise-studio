# Auth Server Configuration

# Server Settings
AUTH_SERVER_HOST=0.0.0.0
AUTH_SERVER_PORT=8000

# Database Configuration
# SQLite (default for development)
DATABASE_URL=sqlite:///./auth_server.db

# PostgreSQL (production)
# DATABASE_URL=postgresql://username:password@localhost:5432/auth_db

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
JWT_ISSUER=ai-enterprise-studio
JWT_AUDIENCE=ai-enterprise-users
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS Settings (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:5174

# Logging
LOG_LEVEL=INFO

# Optional: Email configuration (for future features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@ai-enterprise-studio.com
